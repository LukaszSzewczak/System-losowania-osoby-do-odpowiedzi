<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="System_losowania_osoby_do_odpowiedzi.MainPage">

    <StackLayout Padding="20">
        <Entry x:Name="txtName" Placeholder="Wpisz imię ucznia" />
        <Button Text="Dodaj ucznia" Clicked="DodajUcznia_Clicked" />
        <Button Text="Losuj osobę" Clicked="LosujOsobe_Clicked" />
        <Button Text="Wczytaj listę" Clicked="WczytajListe_Clicked" />
        <Button Text="Zapisz listę" Clicked="ZapiszListe_Clicked" />
        <Button Text="Edytuj" Clicked="EdytujListe_Clicked" />
        <ListView x:Name="lstUczniowie" />
    </StackLayout>

</ContentPage>
